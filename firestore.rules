rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Function to check if the user is an owner of the client
    function isOwner(clientId) {
      return isAuthenticated() && (
        get(/databases/$(database)/documents/clients/$(clientId)).data.ownerUid == request.auth.uid ||
        request.auth.token.admin == true
      );
    }

    // Clients Collection
    match /clients/{clientId} {
      allow read: if isAuthenticated() && (resource.data.ownerUid == request.auth.uid || request.auth.token.admin == true);
      allow create: if isAuthenticated() && request.resource.data.ownerUid == request.auth.uid;
      allow update, delete: if isOwner(clientId);
    }

    // Sub-collections or standalone collections filtered by clientId
    match /insights_daily/{insightId} {
      allow read: if isAuthenticated() && (resource.data.ownerUid == request.auth.uid || isOwner(resource.data.clientId));
      allow write: if false; // Only written via Admin SDK API
    }

    match /findings/{findingId} {
      allow read: if isAuthenticated() && (resource.data.ownerUid == request.auth.uid || isOwner(resource.data.clientId));
      allow write: if false; // Only written via Admin SDK API
    }

    match /reports/{reportId} {
      allow read: if isAuthenticated() && (resource.data.ownerUid == request.auth.uid || isOwner(resource.data.clientId));
      allow write: if false; // Only written via Admin SDK API
    }
  }
}
