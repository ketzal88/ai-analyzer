rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /accounts/{accountId} {
      // Users can only read/write their own accounts based on ownerUid
      allow read, update, delete: if request.auth != null && resource.data.ownerUid == request.auth.uid;
      
      // Validation for creation
      allow create: if request.auth != null 
        && request.resource.data.ownerUid == request.auth.uid
        && request.resource.data.name is string
        && request.resource.data.metaAdAccountId is string
        && request.resource.data.targetCpa is number;
    }
  }
}
